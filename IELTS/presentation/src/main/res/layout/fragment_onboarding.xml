<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/welcomeText"
            style="@style/Card.Title"
            android:text="Welcome to IELTS Preparation!"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/weakestSkillLayout"
            style="@style/Card.Input.Dropdown"
            android:hint="What's your weakest IELTS skill?"
            app:layout_constraintTop_toBottomOf="@id/welcomeText">

            <AutoCompleteTextView
                android:id="@+id/weakestSkillDropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/targetScoreLabel"
            style="@style/Card.Label"
            android:text="Target band score"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/weakestSkillLayout" />

        <com.google.android.material.slider.Slider
            android:id="@+id/targetScoreSlider"
            style="@style/Card.Slider"
            app:layout_constraintTop_toBottomOf="@id/targetScoreLabel" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/studyGoalLayout"
            style="@style/Card.Input"
            android:hint="What's your study goal?"
            app:layout_constraintTop_toBottomOf="@id/targetScoreSlider">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/studyGoalInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/getStartedButton"
            style="@style/Card.Button"
            android:text="Get Started"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/studyGoalLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView> 